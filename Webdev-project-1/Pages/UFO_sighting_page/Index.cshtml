@page
@model Webdev_project_1.Pages.UFO_sighting_page.IndexModel

@{
    ViewData["Title"] = "UFO repository";
}

<h1>Index</h1>
<p>
    This database contains crowdsourced UFO observations. If you have a sighting to report, please submit it using the button below
    and a X-COM team will be dispatched to the specified location.
</p>
<p>
    <button type="button" class="btn btn-primary"><a asp-page="Create" style="color:white; text-decoration: none">Report UFO</a></button>
</p>
<form>
    <p>
        Subject: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UFO_sighting[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UFO_sighting[0].UFO_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UFO_sighting[0].longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UFO_sighting[0].latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UFO_sighting[0].Observation_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UFO_sighting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Category_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UFO_title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observation_date)
            </td>
            <td>
                    <button type="button" class="btn btn-info btn-sm" style="margin: 1px"><a asp-page="./Edit" asp-route-id="@item.ID" style="color: white; text-decoration: none">Edit</a></button>
                    <button type="button" class="btn btn-secondary btn-sm" style="margin: 1px"><a asp-page="./Details" asp-route-id="@item.ID" style="color: white; text-decoration: none">Details</a></button>
                    <button type="button" class="btn btn-danger btn-sm" style="margin: 1px"><a asp-page="./Delete" asp-route-id="@item.ID" style="color: white; text-decoration: none">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
